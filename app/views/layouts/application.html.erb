<!DOCTYPE html>
<html>
<head>
  <title>Medicalapp</title>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag "wufoo" %>
  <%= csrf_meta_tag %>
<script>
$(function(){
   $("tr").each(function(i){
	
      if(i%2==0){
         $(this).css("background-color", "white");
      }else if(i==1){
         $(this).css("text-align", "center");
      }
   });
});
</script>
</head>
<body id="public">
<div id="container">
  <%= render 'layouts/header' %>
<h1><%= link_to "MedicalAPP", home_index_path,:id=>"logo"%></h1>
<div class="subcontainer">
	<% if personExist?  %>
	       <%= render 'layouts/menu' %>
	<br>
	  <% end %>
<%= yield %>
</div>
</div><!--container-->
 <%= render 'layouts/footer' %>
</body>
 <%= debug(params) if Rails.env.development? %>
</html>
