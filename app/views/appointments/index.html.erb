
<h3>Listing <%= pluralize(@appointments.count,"appointment")%> </h3>

<table>
  <tr>
    <th>Doctor</th>
    <th>Patient</th>
    <th>Date</th>
    <th>Hour</th>
     <th>status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
<% @appointments.each do |appointment| %>
  <tr>
    <td><%= "#{appointment.doctor.name}  #{appointment.doctor.lastname}"%></td>
    <td><%= "#{appointment.patient.name}  #{appointment.patient.lastname}"%></td>
    <td><%= appointment.dateapp %></td>
    <td><%= appointment.timeapp %></td>
    <td><%= appointment.status %></td>
    <td><%= link_to 'Show', appointment %></td>
<%if appointment.status.eql? "Scheduled"%>
    <td><%= link_to 'Cancel', cancel_appointment_path(appointment.id),:confirm => 'Are you sure?' %></td>
<%end%>
    <td><%# link_to 'Edit', edit_appointment_path(appointment) %></td>
    <td><%# link_to 'Destroy', appointment, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

